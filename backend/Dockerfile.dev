# Dockerfile para Backend - Desenvolvimento
FROM node:18-bullseye-slim

# Instalar ferramentas necessárias (git, netcat e dependências do Chromium)
RUN apt-get update && apt-get install -y --no-install-recommends \
    git \
    netcat-openbsd \
    ca-certificates \
    fonts-liberation \
    libasound2 \
    libatk-bridge2.0-0 \
    libatk1.0-0 \
    libc6 \
    libcairo2 \
    libcups2 \
    libdbus-1-3 \
    libdrm2 \
    libexpat1 \
    libfontconfig1 \
    libgbm1 \
    libgcc1 \
    libglib2.0-0 \
    libgtk-3-0 \
    libnss3 \
    libnspr4 \
    libpango-1.0-0 \
    libpangocairo-1.0-0 \
    libstdc++6 \
    libx11-6 \
    libx11-xcb1 \
    libxcb1 \
    libxcomposite1 \
    libxcursor1 \
    libxdamage1 \
    libxext6 \
    libxfixes3 \
    libxi6 \
    libxrandr2 \
    libxrender1 \
    libxss1 \
    libxtst6 \
    wget \
    xdg-utils \
    && rm -rf /var/lib/apt/lists/*

# Criar diretório de trabalho
WORKDIR /app

# Copiar package.json e package-lock.json
COPY package*.json ./

# Instalar dependências (incluindo dev)
RUN npm ci

# Copiar código fonte
COPY . .

# Gerar cliente Prisma
RUN npx prisma generate

# Expor porta
EXPOSE 3001

# Criar script de inicialização que conecta ao banco no host
RUN echo '#!/bin/sh\n\
echo "🔄 Verificando conexão com banco de dados..."\n\
echo "🔄 Executando migrations..."\n\
npx prisma migrate deploy || echo "⚠️  Erro ao executar migrations"\n\
if [ "$ENABLE_SEED" = "true" ]; then\n\
  echo "🌱 Populando banco..."\n\
  npm run prisma:seed || echo "⚠️  Erro ao popular banco"\n\
fi\n\
echo "🚀 Iniciando servidor de desenvolvimento..."\n\
exec npm run dev' > /app/start.sh && chmod +x /app/start.sh

# Comando padrão
CMD ["/app/start.sh"]